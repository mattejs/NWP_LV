extends ../layout

block content
	h1.
		Project ID #{project._id}
	if(viewType != 1 && viewType !=2) 
		p You can't edit this project
		a(href='/projects/')
			button(type="button") Back
	form(action='/projects/#{project._id}/edit',method='post',name='updateproject',enctype='application/x-www-form-urlencoded')
		if (viewType == 1)
			p Name: 
				input#inputName(type="text", value=project.name, name="name")
			p Description: 
				input#inputDescription(type="text", value=project.description, name="description")
			p Price:
				input#inputPrice(type="number", value=project.price, name="price")
			p Finished Tasks: 
				input#inputFinishedTasks(type="text", value=project.finishedTasks, name="finishedTasks")
			p Archived:			 
				input#inputArchived(type="checkbox" name="archived" value=project.archived)
			p Start Date: 
				input#inputStartDate(type="date", name="startDate", value=project.startDate)
			p End Date: 
				input#inputEndDate(type="date", name="endDate", value=project.endDate)
			p
				input(type='hidden',value='PUT',name='_method')
			p
				button#btnSubmit(type='submit').
					Update
	form(action='/projects/#{project._id}/edit',method='post',name='updateproject',enctype='application/x-www-form-urlencoded')
		if (viewType == 2)
			input#inputName(type="hidden", value=project.name, name="name")
			input#inputDescription(type="hidden", value=project.description, name="description")
			input#inputPrice(type="hidden", value=project.price, name="price")
			p Finished Tasks:
				input#inputFinishedTasks(type="text", value=project.finishedTasks, name="finishedTasks")
			input#inputArchived(type="hidden" name="archived" value=project.archived)
			input#inputStartDate(type="hidden", name="startDate", value=project.startDate)
			input#inputEndDate(type="hidden", name="endDate", value=project.endDate)
			p
				input(type='hidden',value='PUT',name='_method')
			p
				button#btnSubmit(type='submit').
					Update
	